{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": ".",
    "outDir": "./dist",

    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "skipLibCheck": true
  },
  "include": ["*.ts", "**/*.d.ts"],
  "exclude": ["dist", "node_modules"]
}
